{
  "name": "nft-admin-backend",
  "version": "1.0.0",
  "description": "NFT Admin Backend Service - NestJS",
  "main": "dist/main.js",
  "scripts": {
    "prebuild": "prisma generate",
    "build": "nest build",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/main",
    "migration:generate": "prisma migrate dev",
    "migration:run": "prisma migrate deploy",
    "prisma:studio": "prisma studio",
    "prisma:generate": "prisma generate",
    "postinstall": "prisma generate",
    "lint": "eslint . --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:features": "ts-node scripts/test-all-features.ts",
    "test:api": "ts-node scripts/test-api-endpoints.ts",
    "test:automated": "ts-node scripts/test-complete-automated.ts",
    "test:automated:log": "npm run test:automated 2>&1 | tee test.log | tail -100",
    "test:all": "npm run test:automated && npm run test:api",
    "create-admin": "ts-node scripts/create-admin.ts",
    "migrate-nft-pools": "ts-node scripts/migrate-nft-pools.ts",
    "reset-database": "ts-node scripts/reset-database.ts"
  },
  "dependencies": {
    "ethers": "^6.13.0",
    "@nestjs/common": "^10.4.0",
    "@nestjs/core": "^10.4.0",
    "@nestjs/jwt": "^10.2.0",
    "@nestjs/passport": "^10.0.3",
    "@nestjs/platform-express": "^10.4.0",
    "@nestjs/config": "^3.2.0",
    "@prisma/client": "^5.19.0",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.1",
    "passport": "^0.7.0",
    "passport-jwt": "^4.0.1",
    "reflect-metadata": "^0.2.2",
    "rxjs": "^7.8.1",
    "bcrypt": "^5.1.1",
    "speakeasy": "^2.0.0",
    "qrcode": "^1.5.3"
  },
  "devDependencies": {
    "@nestjs/cli": "^10.4.0",
    "@nestjs/schematics": "^10.1.1",
    "@nestjs/testing": "^10.4.0",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.12",
    "@types/node": "^20.14.0",
    "@types/passport-jwt": "^4.0.1",
    "@types/bcrypt": "^5.0.2",
    "@types/speakeasy": "^2.0.9",
    "@types/qrcode": "^1.5.5",
    "@eslint/js": "^9.9.0",
    "@typescript-eslint/eslint-plugin": "^8.0.0",
    "@typescript-eslint/parser": "^8.0.0",
    "eslint": "^9.9.0",
    "eslint-config-prettier": "^9.1.0",
    "typescript-eslint": "^8.0.0",
    "jest": "^29.7.0",
    "prisma": "^5.19.0",
    "source-map-support": "^0.5.21",
    "ts-jest": "^29.2.5",
    "ts-loader": "^9.5.1",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.5.4"
  },
  "jest": {
    "moduleFileExtensions": ["js", "json", "ts"],
    "rootDir": "src",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": ["**/*.(t|j)s"],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}

